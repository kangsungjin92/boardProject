<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="userDaoMapper">
	
	<insert id="signUpMapper" parameterType="userVo">
		INSERT INTO MEMBER VALUES(
			SEQ_ID.NEXTVAL,
			#{user_id},
			#{user_password}
		)
	</insert>
	
	<select id="loginValidationMapper" parameterType="userVo" resultType="userVo">
		SELECT * FROM MEMBER WHERE USER_ID = #{user_id} AND USER_PASSWORD = #{user_password}
	</select>
</mapper>